<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '新規投稿', class: "btn btn-success" %>
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
            </tr>
              <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
              <% end %>
          </thead>
        </table>
      <% end %>
    </div>
  </div>
</div>
