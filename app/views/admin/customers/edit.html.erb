<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8 offset-md-2">
      <h2><%= @customer.fullname %>さんの会員詳細</h2>
      <%= form_with model:@customer, url:admin_customer_path, methot: :patch, local: true do |f| %>
        <table>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :first_name %>　<%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :first_name_kana %>　<%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code, autofocus:true %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, autofocus:true %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.telephone_field :telephone_number, autofocus:true %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, false %>有効
              <%= f.radio_button :is_deleted, true %>退会
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>