<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-2">
      <h4>商品詳細</h4>
      <%= attachment_image_tag @item, :image, size:"200x200", fallback: "no_image.jpg" %>
    </div>
    <div class="col-md-4 offset-md-2">
      <P><%= @item.name %></P>
      <p><%= @item.introduction %></p>
      <p><%= @genre.name %></p>
      <p><%= @item.price %></p>
      <p>
        <% if @item.is_active == true %>
          <td>販売中</td>
        <% else %>
          <td>販売停止中</td>
        <% end %>
      </p>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
  </div>