<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class ="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
           <% if admin_signed_in? %>
            <%= link_to "商品一覧", admin_items_path %>
            <%= link_to "会員一覧", admin_customers_path %>
            <%= link_to "注文歴一覧", admin_top_path %>
            <%= link_to "ジャンル一覧", admin_genres_path %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
           <% elsif customer_signed_in? && current_customer.is_deleted == false %>
            <%= link_to "マイページ", customer_path(current_customer.id) %>
            <%= link_to "商品一覧", items_path %>
            <%= link_to "カート", cart_items_path %>
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
           <% else %>
            <%= link_to "Aboud", about_path %>
            <%= link_to "商品一覧", items_path %>
            <%= link_to "新規登録", new_customer_registration_path %>
            <%= link_to "ログイン", new_customer_session_path %>
           <% end %>
          </ul>
        </div>
      </div>
      </nav>

    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
       <div class="row">
        <div class="mx-auto">
        </div>
       </div>
      </div>
    </footer>
  </body>
</html>
