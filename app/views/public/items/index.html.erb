<div class="container">
  <h2>商品一覧</h2>
  <div class="row">
    <% @items.each do |item| %>
      <% if item.is_active == true %>
        <div class="col-md-3">
            <%= attachment_image_tag item, :image, size:"100x100", fallback: "no_image.jpg" %>
            <p><%= link_to item.name, item_path(item.id) %></p>
            <p><%= item.price %></p>
        </div>
      <% end %>
    <% end %>
    <%= paginate @items %>
  </div>
</div>