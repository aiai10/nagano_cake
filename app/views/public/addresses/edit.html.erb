<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>配送先編集</h1>
    </div>
    <div class="offset-md-8"></div>
    <div class="col-md-3">
      <p>郵便番号（ハイフンなし）</p>
      <p>住所</p>
      <p>宛名</p>
    </div>
    <div class="col-md-9">
      <%= form_with model:@address, url:address_path, method: :patch, local: true do |f| %>
        <p><%= f.text_field :postal_code, autofocus:true %></p>
        <p><%= f.text_field :address, autofocus:true %></p>
        <%= f.text_field :name, autofocus:true %>
        <%= f.submit '変更内容を保存' %>
      <% end %>
    </div>
  </div>
</div>