<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>配送先登録/一覧</h2>
    </div>
    <div class="offset-md-8"></div>
    <div class="col-md-12">
      <%= form_with model: @address, url:addresses_path, method: :post, local:true do |f| %>
        <table>
          <tr>
            <th><%= f.label :"郵便番号（ハイフンなし）" %></th>
            <td><%= f.text_field :postal_code, autofocus:true %></td>
          </tr>
          <tr>
            <th><%= f.label :"住所" %></th>
            <td><%= f.text_field :address, autofocus:true %></td>
          </tr>
          <tr>
            <th><%= f.label :"宛名" %></th>
            <td><%= f.text_field :name, autofocus:true %>　<%= f.submit '新規登録', class: "btn btn-success" %></td>
          </tr>
          <%= f.hidden_field :customer_id, value: @customer %>
        </table>
      <% end %>

    </div>
    <div class="col-md-8">
      <table class="table">
        <tbody>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <tr>
        <% @addresses.each do |addresses| %>
          <td><%= addresses.postal_code %></td>
          <td><%= addresses.address %></td>
          <td><%= addresses.name %></td>
          <td>
          <button type="button" class="btn btn-success">
            <%= link_to "編集する", edit_address_path(addresses.id), class: "text-white" %>
          </button>
          <button type="button" class="btn btn-danger">
            <%= link_to "削除する", address_path(addresses.id), method: :delete, class: "text-white" %>
          </button>
          </td>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>