<div class="container">
    <div class="row">
      <div class="offset-md-2 col-md-10">
        <h2>会員情報編集</h2>
        <%= form_with model: @customer, url:customer_path, method: :patch, local:true do |f| %>
          <table>
              <tr>
                <th><%= f.label :"氏名" %></th>
                <td><%= f.text_field :first_name %></td>
                <td> <%= f.text_field :last_name %></td>
              </tr>
              <tr>
                <th><%= f.label :"フリガナ" %></th>
                <td><%= f.text_field :first_name_kana %></td>
                <td><%= f.text_field :last_name_kana %></td>
              </tr>
              <tr>
                <th><%= f.label :"郵便番号" %></th>
                <td><%= f.text_field :postal_code, autofocus:true %></td>
              </tr>
              <tr>
                <th><%= f.label :"住所" %></th>
                <td><%= f.text_field :address, autofocus:true %></td>
              </tr>
              <tr>
                <th><%= f.label :"電話番号" %></th>
                <td><%= f.telephone_field :telephone_number, autofocus:true %></td>
              </tr>
               <tr>
                 <th><%= f.label :"メールアドレス" %></th>
                 <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
               </tr>
               <tr>
                 <th></th>
                 <td><%= f.submit '編集内容を保存', class: "btn btn-success" %></td>
                 <td><%= link_to "退会する", unsubscribe_customer_path, class: "btn btn-danger" %></td>
               </tr>
          </table>
        <% end %>
      </div>
  </div>
</p>