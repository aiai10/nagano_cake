<p id="notice">
<div class="container-md">
  <div class="row">
    <div class="col-lg-4">
    <h1>マイページ</h1>
      <h4>登録情報</h4>
      <button type="button" class="btn btn-success">
        <%= link_to "編集する", edit_customer_path(@customer.id), class: "text-white" %>
      </button>
        <table class="table">
          <tbody>
              <tr>
                <th scope="row">氏名</th>
                <td><%= @customer.first_name %> <%= @customer.last_name %></td>
              </tr>
              <tr>
                <th scope="row">カナ</th>
                <td> <%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
              </tr>
              <tr>
                <th scope="row">郵便番号</th><td> <%= @customer.postal_code %></td>
              </tr>
              <tr>
                <th scope="row">住所</th><td><%= @customer.address %></td>
              </tr>
              <tr>
                <th scope="row">電話番号</th><td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <th scope="row">メールアドレス</th><td><%= @customer.email %></td>
              </tr>
          </tbody>
        </table>

      <h4>配送先</h4>
      <button type="button" class="btn btn-primary">
        <%= link_to "一覧を見る", addresses_path, class: "text-white" %>
      </button>
      <h4>注文履歴</h4>
      <button type="button" class="btn btn-primary">
        <%= link_to "一覧を見る", orders_path, class: "text-white" %>
      </button>
    </div>

  </div>
</div>