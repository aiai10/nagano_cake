<div class="container">
  <div class="row">
    <div class="offset-md-1 col-md-11">
      <h2>新規登録</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="col-md-12">
      <table>
        <tr>
          <th><%= f.label :"名前" %></th>
          <td>(姓) <%= f.text_field :first_name, autofocus: true %></td>
          <td>(名) <%= f.text_field :last_name, autofocus: true %></td>
        </tr>
        <tr>
          <th><%= f.label :"フリガナ" %></th>
          <td>(セイ) <%= f.text_field :first_name_kana , autofocus:true %></td>
          <td>(メイ) <%= f.text_field :last_name_kana , autofocus:true %></td>
        </tr>
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postal_code, autofocus:true %></td>
        </tr>
        <tr>
          <th><%= f.label :住所 %></th>
          <td><%= f.text_field :address, autofocus:true %></td>
        </tr>
        <tr>
          <th><%= f.label :"電話番号(ハイフンなし)" %></th>
          <td><%= f.telephone_field :telephone_number, autofocus:true %></td>
        </tr>
        <tr>
          <th>
            <%= f.label :"パスワード(6文字以上)" %>
            <% if @minimum_password_length %>
            <% end %>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th><%= f.label :"パスワード(確認用)" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "新規登録" %></td>
        </tr>
      </table>
      <% end %>
      </div>
  <div class="offset-md-1"></div>
  <div class="col-md-8 offset-md-3">
  <h4>既に登録済みの方</h4>
  <p><%= render "public/shared/links" %>からログインしてください。</p>
  </div>
  </div>
</div>